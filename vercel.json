# make sure you're at the repo root, where the 'api' folder lives
pwd
ls -la

# create vercel.json at the same level as /api
cat > vercel.json << 'JSON'
{
  "rewrites": [
    { "source": "/r/:id", "destination": "/api/redirect?id=:id" },
    { "source": "/r/:id/", "destination": "/api/redirect?id=:id" }
  ]
}
JSON

git add vercel.json
git commit -m "Add rewrite: /r/:id -> /api/redirect"
git push origin main
